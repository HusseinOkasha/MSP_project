
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet2.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />

    <title>signup</title>
</head>
<body>
    <div class="box">
        <form method="post" action="Pharmacy/signup_submit">
            <div class="form-group">
                <label>Pharmacy name</label>
                <input class="form-control" type="text" placeholder="Enter pharmacy name" name="phar_name">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" placeholder="Enter your password " name="password" class="form-control">
            </div>
            <div class="form-group">
                <label> E-mail </label>
                <input type="email" placeholder="Enter pharmacy E-mail " name="mail" class="form-control">
                <p> *Note if this pharmacy has branches create account for each one  </p>
            </div>
            <div class="form-group">
                <label> Phone no.</label>
                <input type="tel" placeholder="Enter pharmacy phone no. " name="phone" class="form-control">
            </div>
            <div class="form-group">
                <label>Address </label>
                <input type="text" placeholder="Enter pharmacy address " name="address" class="form-control">
            </div>
            <button class="btn btn-primary" type="submit">submit</button>
        </form>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
</body>
</html>
