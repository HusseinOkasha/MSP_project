<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet2.css"rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
   
    <meta name="viewport" content="width=device-width" />
    <title>signup</title>
</head>
<body>
       @Html.Partial("NavBar")
        
    <button class="btn btn-primary" type="submit"> To buy  </button>
    <button class="btn btn-primary" type="submit"> To sell </button>

        <div class="box" >
            <form method="post" action="/User/signup_submit">
                <div class="form-group">
                    <label>User name </label>
                    <input class="form-control" type="text" placeholder="Enter your name " name="user_name">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" placeholder="Enter your password " name="password" class="form-control">
                </div>
                <div class="form-group">
                    <label> E-mail </label>
                    <input type="email" placeholder="Enter your E-mail " name="mail" class="form-control">
                </div>
                <div class="form-group">
                    <label> Phone no.</label>
                    <input type="tel" placeholder="Enter your phone no. " name="phone" class="form-control">
                </div>
                <div class="form-group">
                    <label>Address </label>
                    <input type="text" placeholder="Enter your address " name="address" class="form-control">
                </div>
                <button class="btn btn-primary" type="submit">submit</button>
            </form>
        </div>
    
  
</body>
</html>
